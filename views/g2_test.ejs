<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/about-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Book G2 Test</h1>
                            <span class="subheading"></span>
                        </div>
                    </div>
                </div>
            </div>
        
        </header>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="my-5">
                            
                            <form id="g2_test_form" action="/g2_test/store" method="POST">
                                <%if(g2collection2.firstname!="default"){%>
                                    <div class="form-floating">
                                        <input class="form-control" id="firstname" name="firstname" type="text" value="<%=g2collection2.firstname%>"  readonly/>
                                        <label for="name">First name</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="lastname" name="lastname" type="text" value="<%=g2collection2.lastname%>" readonly/>
                                        <label for="name">Last name</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="age" name="age" type="text" value="<%=g2collection2.age%>"  readonly/>
                                        <label for="email">Age</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="license" name="license" type="text" value="<%=g2collection2.license%>" readonly/>
                                        <label for="license">License</label>
                                    </div>
                                    <br>
                                    <h5>Car Details</h5>
                                    <div class="form-floating">
                                        <input class="form-control" id="make" name="make" type="text" value="<%=g2collection2.carDetails.make%>" />
                                        <label for="make">Make</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="model" name="model" type="text" value="<%=g2collection2.carDetails.model%>"/>
                                        <label for="model">Model</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="year" name="year" type="text" value="<%=g2collection2.carDetails.year%>" />
                                        <label for="year">Year</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="plateno" name="plateno" type="text" value="<%=g2collection2.carDetails.plateno%>"  />
                                        <label for="plate_no">Plate Number</label>
                                    </div>
                                    <br>
                                <%}else{%>
                                    <div class="form-floating">
                                        <input class="form-control" id="firstname" name="firstname" type="text" placeholder="Enter your name..."  />
                                        <label for="name">First name</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="lastname" name="lastname" type="text" placeholder="Enter your name..." />
                                        <label for="name">Last name</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="age" name="age" type="text" placeholder="Enter your email..."  />
                                        <label for="email">Age</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="license" name="license" type="text" placeholder="Enter your phone number..."  />
                                        <label for="license">License</label>
                                    </div>
                                    <br>
                                    <h5>Car Details</h5>
                                    <div class="form-floating">
                                        <input class="form-control" id="make" name="make" type="text" placeholder="Enter your name..." />
                                        <label for="make">Make</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="model" name="model" type="text" placeholder="Enter your name..."/>
                                        <label for="model">Model</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="year" name="year" type="text" placeholder="Enter your year..."  />
                                        <label for="year">Year</label>
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="plateno" name="plateno" type="text" placeholder="Enter your plate no..."  />
                                        <label for="plate_no">Plate Number</label>
                                    </div>
                                    <br>
                                <%}%>
                                
                                <button class="btn btn-primary text-uppercase " id="submitButton" type="submit">Submit application</button>
                            
                            </form >
                            <br>
                            <br>    
                            <form id="g2_test_appointment_form" action="/g2_test/appointmentBooked" method="POST">
                                <h3>Book an Appointment</h3>
                                <div class="form-floating" id="selectedDateDiv">
                                    <input type="date" id="selectedDate" class="form-control" name="selectedDate">
                                    <label for="selectedDate">select a date</label>
                                </div>
                                <br>
                                <input type="hidden" id="selected-timeslot" name="selectedTime" value="">

                                <button class="btn btn-primary text-uppercase " id="submitButton" type="submit">Book now</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <%- include('layouts/footer'); -%>
        <%- include('layouts/scripts'); -%>
        <%- include('layouts/g2_test_script'); -%>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
    </body>
</html>
